import unittest
import tempAdvanced
from tempAdvanced import portscan
from tempAdvanced import thread
from unittest.mock import patch

#the patch decorator creats a mock class
#It pulls the object from the other side and creates a mock object to test
@patch('tempAdvanced.thread')
@patch('tempAdvanced.portscan')

class TestMock3(unittest.TestCase):
	
	def test(self, MockClass1, MockClass2): #Create the mock test class, pass 3 positional arguments
		tempAdvanced.portscan()
		tempAdvanced.thread()
		assert MockClass1 is tempAdvanced.portscan
		assert MockClass2 is tempAdvanced.thread
		self.assertTrue(MockClass1.called)
		self.assertTrue(MockClass2.called)
		
if __name__ == '__main__':
	unittest.main()
